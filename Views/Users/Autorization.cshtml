@{
    ViewData["Title"] = "Авторизация";
}
@model staff_register.Models.User
<h2>@ViewData["Title"]</h2>


<link rel="stylesheet" href="/css/site.css" />
<form asp-controller="Users" asp-action="Autorization" method="post">
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Логин</label>
        <input type="text" class="form-control" id="exampleInputEmail1" asp-for="Login">
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Пароль</label>
        <input type="password" class="form-control" id="exampleInputPassword1" asp-for="Password">
      </div>
      <button type="submit" class="btn btn-primary">Войти</button>
</form>